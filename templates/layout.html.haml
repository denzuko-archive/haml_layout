!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      = yield(:title) || "Untitled"
      = stylesheet_link_tag "<%= file_name %> "
    = javascript_include_tag :defaults

  %body
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      = yeild
